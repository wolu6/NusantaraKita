generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model nk_provinsi {
  kode      String              @id @db.VarChar(13)
  nama      String?             @db.VarChar(100)
  lat       Float?
  lng       Float?
  kabupaten nk_kabupaten_kota[]
}

model nk_kabupaten_kota {
  kode          String       @id @db.VarChar(13)
  nama          String?      @db.VarChar(100)
  lat           Float?
  lng           Float?
  kode_provinsi String?      @db.VarChar(13)
  provinsi      nk_provinsi? @relation(fields: [kode_provinsi], references: [kode], onDelete: SetNull, onUpdate: Cascade)

  @@index([kode_provinsi], name: "fk_kabupaten_provinsi")
}
